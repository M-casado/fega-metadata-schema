{
    "$id": "https://raw.githubusercontent.com/M-casado/fega-metadata-schema/main/schemas/isa/process_parameter_value_schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title" : "ISA process parameter value schema",
    "description" : "JSON-schema representing an ISA model Parameter Value (associated with a Protocol REF) object",
    "$comment": "This file includes or is derived from Original Code by the ISA Team under CPAL-1.0. Modifications by [AUTHORS.md](../../AUTHORS.md), 27-08-2025. See ./README.md for details.",
    "type" : "object",
    "@context": [
        "./FEGA.common-definitions.json"
    ],
    "required": ["category", "value"],
    "properties" : {
        "@id": { "type": "string", "format": "uri-reference" },
        "@context": { "type": "string", "format": "uri-reference"},
        "@type" : { 
            "anyOf": [
                { "type": "string", "enum": ["ParameterValue"] },
                {
                    "type": "array",
                    "contains": {
                        "const": "ParameterValue"
                    }
                }
            ]
        },
        "category" : {
             "$ref": "protocol_parameter_schema.json#"
            },
        "value": {
            "anyOf" : [
                { "$ref": "../FEGA.common-definitions.json#/$defs/ontologyTerm"},
                { "type": "string"},
                { "type": "number"}
                ]
        },
        "unit": {
            "allOf": [
                {
                    "title": "Inherited ontologyTerm structure of term id and label",
                    "$ref": "../FEGA.common-definitions.json#/$defs/ontologyTerm"
                }
            ],
            "properties": {
                "id": {
                    "title": "Ontology constraints for this specific term id",
                    "graphRestriction": {
                        "ontologies": ["obo:uo"],
                        "classes": ["UO:0000000"],
                        "relations": ["rdfs:subClassOf"],
                        "includeSelf": false
                    },
                    "examples": [ "UO:0000027", "UO:0000008" ]
                },
                "label": {
                    "graphRestriction": {
                        "ontologies": [ "obo:uo" ],
                        "classes": [ "UO:0000000" ],
                        "relations": ["rdfs:subClassOf"],
                        "queryFields": [ "label" ],
                        "includeSelf": false
                    },
                    "examples": [ "degree Celsius", "meter" ]
                }
            }
        },
        "comments" : {
            "type": "array",
            "items": {
                 "$ref": "comment_schema.json#"
            }
        }
    },
    "examples": [
        {
            "@id": "urn:uuid:6c6f1b44-1b1a-4c8c-9c0e-9a9f2f5a1e01",
            "@context": "https://raw.githubusercontent.com/M-casado/fega-metadata-schema/main/schemas/isa/process_parameter_value_schema.json",
            "@type": "ParameterValue",
            "category": {
                "@id": "urn:uuid:pp-incubation-temperature",
                "@context": "https://raw.githubusercontent.com/M-casado/fega-metadata-schema/main/schemas/isa/protocol_parameter_schema.json",
                "@type": "ProtocolParameter",
                "parameterName": {
                    "id": "PATO:0000146",
                    "label": "temperature"
                }
            },
            "value": 37,
            "unit": {
                "id": "UO:0000027",
                "label": "degree Celsius"
            },
            "comments": [
                {
                    "@id": "urn:uuid:c1f3ee1d-9ab8-4c1d-9a0b-0dc9cfcb0c11",
                    "@context": "https://raw.githubusercontent.com/M-casado/fega-metadata-schema/main/schemas/isa/comment_schema.json",
                    "@type": "Comment",
                    "name": "note",
                    "value": "Incubator logged 36.9-37.1 C over 30 min."
                }
            ]
        }
    ]
}